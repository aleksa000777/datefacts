<!DOCTYPE html>
<html ng-app="DateFacts">
  <head>
    <meta charset="utf-8">
    <title>date</title>
    <% include ./partials/header %>
  </head>
  <body>
    <div class="twelve columns title">
      <h1>Date Facts!</h1>
    </div>
    <div class="container">
      <section ng-controller="DateFactsController">
        <div class="row search">
          <input type="text" ng-model="q" placeholder="...SEARCH">
        </div>
        <div class="row box twelve columns">
          <div class="today ">
              {{date | date:'dd MMMM yyyy'}}
              {{todayFactData.text}}
          </div>
        </div>
        <form ng-submit=newDateFact()>
          <input type="text" ng-model="newDate.day" placeholder="...day">
          <!-- <input type="text" ng-model="newDate.month" placeholder="...month"> -->
          <select ng-model="newDate.month">
            <option ng-selected="true" value="1">January</option>
            <option value="2">February</option>
            <option value="3">March</option>
            <option value="4">April</option>
            <option value="5">May</option>
            <option value="6">June</option>
            <option value="7">July</option>
            <option value="8">August</option>
            <option value="9">September</option>
            <option value="10">October</option>
            <option value="11">November</option>
            <option value="12">December</option>
          </select>
          <input type="submit" value="WOOOW" class="button button-primary">
        </form>

        <section ng-repeat="dateFact in dateFacts | filter:q | orderBy: '-created_at'">
          <ul>
            <li>Date: {{dateFact.data}} {{dateFact.year}}</li>
            <li>Fact: {{dateFact.text}}</li>
          </ul>
        </section>
      </section>
    </div>
  </body>
</html>
