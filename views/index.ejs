    </ul>
  </div> -->

<section ng-repeat="dateFact in dateFacts | filter:q | orderBy: '-created_at'">
  <ul>
    <li>{{dateFact.day}} {{dateFact.month}} {{dateFact.year}}</li>
    <li>{{dateFact.month}}   month</li>
    <li>{{dateFact.day}}  day</li>
    <li>{{dateFact.text}}</li>
  </ul>
</section>
</section>
  </body>
</html>
